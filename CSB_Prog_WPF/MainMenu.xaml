        <Button Content="Отчеты" Margin="19,200,10,0" Grid.Row="1" VerticalAlignment="Top" FontFamily="Verdana" FontSize="14" FontWeight="Bold" BorderBrush="#FFFF9000" Background="#FFFF9000" Foreground="#FF090057" Height="33" Grid.Column="1" Cursor="Hand"/>

    </Grid>
</Window>
