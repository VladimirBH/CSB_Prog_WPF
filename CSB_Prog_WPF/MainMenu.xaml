        <Label Content="Бурбах" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="84" Foreground="#FC090057" FontFamily="Verdana" FontSize="14" Height="27" Grid.Column="1"/>
